<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:layout_width="320dp"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cardViewSpecial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#880037ff"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="25dp">


        <ImageView
            android:id="@+id/showItemLogoSpecial"
            android:layout_width="118dp"
            android:layout_height="133dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/download_show_button"
            app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/relativeLayoutSpecial"
            android:layout_width="180dp"
            android:layout_height="182dp"
            android:background="#c4c5d4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/showDescriptionSpecial"
                android:layout_width="170dp"
                android:layout_height="122dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/showItemTitleSpecial"
                app:layout_constraintVertical_bias="0.666" />

            <TextView
                android:id="@+id/showItemTitleSpecial"
                android:layout_width="170dp"
                android:layout_height="28dp"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.035" />

        </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/download_show_button"
            android:layout_width="118dp"
            android:layout_height="51dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#c4c5d4"
            android:text="@string/downloaded_button_string"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/relativeLayoutSpecial"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showItemLogoSpecial" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
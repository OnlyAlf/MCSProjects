<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    android:id="@+id/parent_layout_fragment"
    android:background="#440217ff">


    <!--
    This layout is a two-pane layout for the Series
    master/detail flow.

    -->

    <FrameLayout
        android:id = "@+id/show_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/showRecyclerView"
        android:layout_toRightOf="@id/showRecyclerView">
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/showRecyclerView"
        android:layout_width="222dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
